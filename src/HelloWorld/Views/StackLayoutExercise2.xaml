<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HelloWorld.Views.StackLayoutExercise2"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.Platforms>
                <On Platform="iOS">
                    0, 20, 0, 0
                </On>
            </OnPlatform.Platforms>
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="nyc_photographer" />
            <Image Source="http://lorempixel.com/1920/1080/nature/3" />
            <StackLayout Padding="10,0,0,0">
                <StackLayout Orientation="Horizontal">
                    <Button Text="Like" />
                    <Button Text="Comment" />
                    <Button Text="Share" />
                </StackLayout>
                <BoxView HeightRequest="1" Color="#f0f0f0" />
                <Label Text="700 likes" />
                <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>